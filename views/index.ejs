<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Olea Specials</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/21ef82ed30.js" crossorigin="anonymous"></script>
    <style>
        
        
        .special{
            margin-bottom: 0px;
        }
        #wrapper{
            width:100%;
            min-height:100vh;
            /* background:grey; */
            display:grid;
            place-content:center;
        }
        #specials{
            width:4.25in;
            height:5.5in;
            background:white;
            border:solid 1px black;
            padding: 0px 50px;
            
            
        }
        ul{
            font-size: 16px;
            font-family:serif;
        }
        
        h1{
            padding:0px 0;
        }
    </style>
</head>

<% 
    let appetizerCount=0
    let entreeCount=0
    let dessertCount=0
    for (let i=0; i<info.length; i++){
        if (info[i].category == "SPECIALS: Appetizer") appetizerCount++ 
        if (info[i].category == "SPECIALS: Entrée") entreeCount++ 
        if (info[i].category == "SPECIALS: Dessert") dessertCount++ 
    }
    
%>

<body>
<div id="wrapper">
<div id="specials">
    <h1>today's specials</h1>

    <% if (appetizerCount == 1) { %>
        <h2>appetizer</h2>
    <% } %>
    <% if (appetizerCount > 1) { %>
        <h2>appetizers</h2>
    <% } %>    
    <ul>
    <% for(let i=0; i<info.length;i++){ %>
        <% if (info[i].category == "SPECIALS: Appetizer"){ %>
        <li class="special">
            <span class="name"><%= info[i].name %></span>
            <span><%= info[i].description %></span>
            <span class="price"><%= info[i].price %></span>
        </li>
        <% } %>
    <% } %>
    </ul>

    <% if (entreeCount == 1) { %>
        <h2>entrée</h2>
    <% } %>
    <% if (appetizerCount > 1) { %>
        <h2>entrées</h2>
    <% } %>
    <ul>
        <% for(let i=0; i<info.length;i++){ %>
            <% if (info[i].category == "SPECIALS: Entrée"){ %>
            <li class="special">
                <span class="name"><%= info[i].name %></span>
                <span><%= info[i].description %></span>
                <span class="price"><%= info[i].price %></span>
            </li>
            <% } %>
        <% } %>
    </ul>
 
    <% if (dessertCount == 1) { %>
        <h2>dessert</h2>
    <% } %>
    <% if (dessertCount > 1) { %>
        <h2>desserts</h2>
    <% } %>

    <ul>
        <% for(let i=0; i<info.length;i++){ %>
            <% if (info[i].category == "SPECIALS: Dessert"){ %>
            <li class="special">
                <span class="name"><%= info[i].name %></span>
                <span><%= info[i].description %></span>
                <span class="price"><%= info[i].price %></span>
            </li>
            <% } %>
        <% } %>
    </ul>
            

</div><!--#specials-->
</div><!--#wrapper-->
<script src="main.js"></script>
</body>
</html>